// A launch configuration that launches the extension inside a new window
{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["${workspaceRoot}/fixtures","--extensionDevelopmentPath=${workspaceRoot}" ],
			"stopOnEntry": false,
            "preLaunchTask": "run",
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/release"
		},
		{
			"name": "Ruby",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["${workspaceRoot}/fixtures","${workspaceRoot}/fixtures/hello.rb","--extensionDevelopmentPath=${workspaceRoot}" ],
			"stopOnEntry": false,
            "preLaunchTask": "run",
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/release"
		},
		{
			"name": "fsharp",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["${workspaceRoot}/fixtures","-g","${workspaceRoot}/fixtures/hello.fsx:4","--extensionDevelopmentPath=${workspaceRoot}" ],
			"stopOnEntry": false,
            "preLaunchTask": "run",
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/release"
		},
    {
      "name": "PowerShell",
      "type": "PowerShell",
      "request": "launch",
      "program": "${file}",
      "args": ["Frank"],
      "cwd": "${file}"
    }
	]
}
